@model IEnumerable<LivrosModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Livros</h1>
        <a class="btn btn-success mx-2" asp-controller="Livros" asp-action="Cadastrar">Cadastrar novo livro</a>
    </div>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-sucess" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }


<table id="Livros" class="table table-hover"> 
  <thead>
    <tr>
      <th scope="col">Título</th>
      <th scope="col">Autor</th>
      <th scope="col">Páginas</th>
      <th scope="col">Capa Dura</th>
      <th scope="col">Data Compra</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

        @if(Model != null)
        {
            @foreach(var livro in Model)
            {
                <tr>
                    <th scope="row">@livro.Titulo</th>
                    <td>@livro.Autor</td>
                    <td>@livro.Paginas</td>
                    <td>@livro.CapaDura</td>
                    <td>@livro.DataCompra</td>
                    <td>
                        <a asp-controller="Livros" asp-action="Editar" asp-route-id="@livro.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Livros" asp-action="Excluir" asp-route-id="@livro.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }

  </tbody>
</table>

</div>